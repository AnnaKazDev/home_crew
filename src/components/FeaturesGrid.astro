---
import FeatureCard from './FeatureCard.astro';

const features = [
  {
    title: "Earn Rewards",
    description: "Collect points and unlock achievements for every completed task",
    icon: `<svg class="w-6 h-6 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8c-1.657 0-3 .895-3 2s1.343 2 3 2 3 .895 3 2-1.343 2-3 2m0-8c1.11 0 2.08.402 2.599 1M12 8V7m0 1v8m0 0v1m0-1c-1.11 0-2.08-.402-2.599-1"></path>
    </svg>`,
    gradient: "from-teal-50/50 to-emerald-50/50 dark:from-teal-950/20 dark:to-emerald-950/20",
    border: "border-teal-100 dark:border-teal-800/50",
    iconBg: "from-teal-500 to-teal-600"
  },
  {
    title: "Family Bonding",
    description: "Strengthen family relationships through collaborative achievements",
    icon: `<svg class="w-6 h-6 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 20h5v-2a3 3 0 00-5.356-1.857M17 20H7m10 0v-2c0-.656-.126-1.283-.356-1.857M7 20H2v-2a3 3 0 015.356-1.857M7 20v-2c0-.656.126-1.283.356-1.857m0 0a5.002 5.002 0 019.288 0M15 7a3 3 0 11-6 0 3 3 0 016 0zm6 3a2 2 0 11-4 0 2 2 0 014 0zM7 10a2 2 0 11-4 0 2 2 0 014 0z"></path>
    </svg>`,
    gradient: "from-emerald-50/50 to-green-50/50 dark:from-emerald-950/20 dark:to-green-950/20",
    border: "border-emerald-100 dark:border-emerald-800/50",
    iconBg: "from-emerald-500 to-emerald-600"
  },
  {
    title: "Smart Scheduling",
    description: "Organize household tasks efficiently and fairly for everyone",
    icon: `<svg class="w-6 h-6 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3a2 2 0 012-2h4a2 2 0 012 2v4m-6 4v10m0 0l-2-2m2 2l2-2m4-6v2m4-2H6a2 2 0 00-2 2v8a2 2 0 002 2h12a2 2 0 002-2v-8a2 2 0 00-2-2z"></path>
    </svg>`,
    gradient: "from-cyan-50/50 to-teal-50/50 dark:from-cyan-950/20 dark:to-teal-950/20",
    border: "border-cyan-100 dark:border-cyan-800/50",
    iconBg: "from-cyan-500 to-cyan-600"
  },
  {
    title: "Build Habits",
    description: "Teach responsibility and independence through consistent routines",
    icon: `<svg class="w-6 h-6 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"></path>
    </svg>`,
    gradient: "from-blue-50/50 to-indigo-50/50 dark:from-blue-950/20 dark:to-indigo-950/20",
    border: "border-blue-100 dark:border-blue-800/50",
    iconBg: "from-blue-500 to-blue-600"
  }
];
---

<div class="grid grid-cols-1 sm:grid-cols-2 gap-6 mt-8">
  {features.map(feature => (
    <div class={`group flex items-start space-x-4 p-4 rounded-2xl bg-gradient-to-r ${feature.gradient} border ${feature.border} hover:shadow-lg transition-all duration-300`}>
      <div class={`flex-shrink-0 w-12 h-12 bg-gradient-to-br ${feature.iconBg} rounded-xl flex items-center justify-center shadow-md group-hover:scale-110 transition-transform duration-300`}>
        <Fragment set:html={feature.icon} />
      </div>
      <div class="flex-1">
        <h3 class="font-bold text-lg text-gray-800 dark:text-white mb-1">{feature.title}</h3>
        <p class="text-gray-600 dark:text-gray-300">{feature.description}</p>
      </div>
    </div>
  ))}
</div>
